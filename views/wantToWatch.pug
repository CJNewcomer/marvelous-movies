extends layout

append head
     link(rel="stylesheet", href="/stylesheets/shelf.css")
     link(rel="stylesheet", href="/stylesheets/profile.css")
     title Blockbuster Shelf
block content
    table.content
        thead: tr
            th Cover
            th Title
            th Genre
            th Description
            th Rating
        tbody
            each movie in users.Movies
                if movie.BlockbusterShelf.status ==='Want to watch' 
                    tr
                        td 
                            img.movieImage(src="https://image.tmdb.org/t/p/original" + movie.imgPath, alt="movie")
                        td #{movie.title}     
                        td #{movie.genre}
                        td #{movie.description}    
                        td #{movie.voteRating}
