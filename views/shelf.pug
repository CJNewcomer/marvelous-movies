extends layout

append head
     link(rel="stylesheet", href="/stylesheets/shelf.css")
     link(rel="stylesheet", href="/stylesheets/profile.css")
     title Blockbuster Shelf
block content
    table(style='width:100%', border='1')
        thead: tr
            th cover
            th Title
            th Year
            th genre
            th Description
            th Rating
        tbody
            each movie in users.Movies
                if movie.BlockbusterShelf.status ==='watched' 
                    tr
                        td 
                            img.movieImage(src="https://image.tmdb.org/t/p/original" + movie.imgPath, alt="movie")
                        td #{movie.title}   
                        td #{year}  
                        td #{movie.genre}
                        td #{movie.description}    
                        td #{movie.voteRating}
