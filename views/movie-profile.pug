extends layout

append head

    link(rel="stylesheet", href="/stylesheets/movie-profile.css")
    script(src='/javascripts/status.js' type='module' defer )
    title Movie Profile

block content
    div.profile
        div.leftContainer
            div.image-column(id=isStatus)
                img(class="movie-poster" src="https://image.tmdb.org/t/p/original" + movie.imgPath, alt="")
                select(id=movie.id class="status")
                    option(value="")= "Add to Shelf"
                    option(value="Want to Watch")= "Want to Watch"
                    option(value="Currently Watching")= "Currently Watching"
                    option(value="Watched")= "Watched"
            div.movieDetails
                h1 #{movie.title}
                    h2(class="genre") #{movie.genre}
                    h2 #{year}
                    h2 #{movie.voteRating / 2} / 5
                h3
                    p(class="description")= movie.description
        div.reviewContainer
            div.reviewHeader Reviews
                button(id=movie.id class="createRev" type="submit") Create Review
            div.reviewBoxes
                each review in reviews
                    p(class="username") #{review.User.userName} 
                    p(class="rating") #{review.Movie.voteRating / 2} / 5 
                    p(class="comment") #{review.comment}

             
                

