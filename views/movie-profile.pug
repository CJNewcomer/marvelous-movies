extends layout

append head

    link(rel="stylesheet", href="/stylesheets/movie-profile.css")
    title Movie Profile

block content
    div.profile
        div.leftContainer
            div.image-column
                img(class="movie-poster" src="https://image.tmdb.org/t/p/original" + movie.imgPath, alt="")
                include includes/status
            div.movieDetails
                h1 #{movie.title}
                    h2(class="genre") #{movie.genre}
                    h2 #{year}
                    h2 #{movie.voteRating / 2}
                h3
                    p= movie.description
             
                

