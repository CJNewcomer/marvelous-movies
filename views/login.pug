extends auth-layout.pug
block content
    form.form(action="/users/login", method="post")
        h2 Login and see your movies! <br> (They miss you!)<br>
        +validationErrorSummary(errors)
        input(type="hidden", name="_csrf", value=token)
        div.inputs
            label(for="email") Email
            input(type="email", name="email")
        div.inputs
            label(for="password") Password
            input(type="password", name="password") 
        button.submit(type="submit") Login
        a(href='/users/sign_up') Not a member?
    form(action="/users/demo", method="post")
        button.submit(type="submit") Demo User